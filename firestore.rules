/**
 * @fileoverview Firestore Security Rules for Spoton application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles, playlists, and pins.
 * Only the authenticated user can read and write their own data.
 * Tracks are public read-only.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/playlists/{playlistId}: Stores playlists created by each user.
 * - /users/{userId}/pins/{pinId}: Stores pinned items.
 * - /tracks/{trackId}: Stores track metadata.
 *
 * Key Security Decisions:
 * - Users can only list their own playlists and pins.
 * - Tracks are publicly readable, but writes are disallowed (in this prototype).
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) Authenticated user can create their own profile if the userId matches their auth UID.
     * @allow (get, update, delete) Authenticated user can read and modify their own profile.
     * @deny (get, update, delete) Authenticated user cannot read or modify another user's profile.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to playlists created by each user.
     * @path /users/{userId}/playlists/{playlistId}
     * @allow (create) Authenticated user can create playlists under their own user ID.
     * @allow (get, list, update, delete) Authenticated user can read, list, modify, and delete their own playlists.
     * @deny (get, list, update, delete) Authenticated user cannot read, list, modify, or delete another user's playlists.
     * @principle Enforces hierarchical ownership for playlists within user profiles.
     */
    match /users/{userId}/playlists/{playlistId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

      /**
       * @description Controls access to pinned items for each user.
       * @path /users/{userId}/pins/{pinId}
       * @allow (create) Authenticated user can create pins under their own user ID.
       * @allow (get, list, update, delete) Authenticated user can read, list, modify, and delete their own pins.
       * @deny (get, list, update, delete) Authenticated user cannot read, list, modify, or delete another user's pins.
       * @principle Enforces hierarchical ownership for pinned items within user profiles.
       */
      match /users/{userId}/pins/{pinId} {
        function isSignedIn() {
          return request.auth != null;
        }

        function isOwner(userId) {
          return request.auth.uid == userId;
        }

        function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
        }

        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

    /**
     * @description Controls access to track metadata.
     * @path /tracks/{trackId}
     * @allow (get, list) All users can read track data.
     * @deny (create, update, delete) No user can create, update, or delete track data (read-only).
     * @principle Allows public read access to track metadata.
     */
    match /tracks/{trackId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}